<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BKGRD">
    <TextView
        android:id="@+id/txtCounter"
        android:onClick="countIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="COUNTER"
        android:textStyle="bold|italic"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_margin="8dp"
        android:id="@+id/btnPlus"
        android:onClick="countIN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCounter"
        android:layout_toLeftOf="@id/txtCounter"
        android:textStyle="bold"
        android:text="+"/>
    <Button
        android:id="@+id/btnMinus"
        android:onClick="countDE"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCounter"
        android:layout_toRightOf="@id/txtCounter"
        android:text="-"/>
    <Button
        android:onClick="resetCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/btnMinus"
        android:layout_centerHorizontal="true"
        android:text="RESEET"/>
</RelativeLayout>